.row
  .four.columns
    = filters :stories_path, 'Done' => 'done', 'Pending' => 'pending', 'Mine' => 'mine'
  .five.columns
    = form_tag({ url: stories_path }, { method: 'get', class: 'row collapse' }) do
      .nine.columns
        = text_field_tag :q, params[:q], placeholder: 'Search user stories'
      .three.columns
        = submit_tag 'Search', class: 'button expand postfix'
  .three.columns
    = link_to 'Write new user story', new_story_path, class: 'button medium radius'
- if stories.any?
  = render partial: 'stories/summary_stories', object: stories
  = paginate stories
- elsif params[:q]
  %p Nothing found.
- else
  %p There are no user stories yet.
