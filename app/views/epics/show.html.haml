%h1= epic.title
%h2.subheader Description
.row
  .body.nine.columns= markdown epic.body
  .three.columns
    = button_to 'Destroy', [epic.project, epic], method: :delete, class: 'button alert radius small'
    = link_to 'Add user story to this epic', new_project_epic_story_path(current_project, epic), class: 'button radius small'
    = link_to 'Edit', [:edit, epic.project, epic], class: 'button radius small'
    %hr
    %ul
      %li= link_to 'Download as JSON', project_epic_path(epic.project, epic, format: 'json')
- if epic.stories.any?
  %h2.subheader Included stories
  = render partial: 'stories/summary_stories', object: epic.stories
- else
  %p There are no stories to display.
